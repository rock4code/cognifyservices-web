---
import PageHeader from "@/components/core/PageHeader.astro";
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";

const about = await getEntry("about", "index");

if (!about) {
  throw new Error("No se encontr√≥ la entrada para 'about/index'.");
}

const page_data = {
  ...about.data,
  content: about.body,
};

const { Content } = await about.render();
---

<Base entry_keys={["about", "index"] as [keyof import("astro:content").ContentEntryMap, string]}>
  <section class="py-16">
    <div class="container">
      <div class="mx-auto max-w-[768px] text-center">
        <PageHeader page_data={page_data} />
      </div>
      <Content />
    </div>
  </section>
</Base>
