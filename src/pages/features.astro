---
import PageHeader from "@/components/core/PageHeader.astro";
import Base from "@/layouts/Base.astro";
import { getEntry } from "astro:content";

const features = await getEntry("features", "index");

if (!features) {
  throw new Error("No se encontrÃ³ la entrada para 'features/index'.");
}

const { Content } = await features.render();
---

<Base>
  <section class="py-16">
    <div class="container">
      {features.data && <PageHeader page_data={features.data} />}
    </div>
    <div class="container">
      <Content />
    </div>
  </section>
</Base>
